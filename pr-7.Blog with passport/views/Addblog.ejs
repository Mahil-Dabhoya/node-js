<%- include('Header') %>

<div class="page-wrapper" style="background: linear-gradient(135deg, #1e3c72, #2a5298); padding: 3rem; min-height: 100vh; margin: 0; display: flex; align-items: center; justify-content: center;">
    <div class="container">
        <h1 class="text-center mb-4 text-white fw-bold" style="font-size: 2.5rem; text-shadow: 0 0 15px #00eaff, 0 0 25px #00eaff; animation: glow 1.5s infinite alternate; letter-spacing: 2px;">🚀 Create a Blog Post</h1>
        
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0" style="border-radius: 20px; overflow: hidden; backdrop-filter: blur(12px); background: rgba(255, 255, 255, 0.15); box-shadow: 0 5px 25px rgba(0, 0, 0, 0.3); transform: rotate(0deg) scale(1.02);">
                    <div class="box p-4" style="border-radius: 20px;">
                        <form action="/insertBlog" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-white">📌 Blog Title:</label>
                                <input type="text" class="form-control" name="title" required style="border-radius: 10px; background: rgba(255, 255, 255, 0.2); color: white; border: none; padding: 12px; text-align: center;">
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-white">📝 Description:</label>
                                <textarea class="form-control" name="description" required style="border-radius: 10px; background: rgba(255, 255, 255, 0.2); color: white; border: none; padding: 12px; text-align: center;"></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-white">👤 Author:</label>
                                <input type="text" class="form-control" name="author" required style="border-radius: 10px; background: rgba(255, 255, 255, 0.2); color: white; border: none; padding: 12px; text-align: center;">
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-white">📷 Upload Image:</label>
                                <input type="file" class="form-control" name="image" required style="border-radius: 10px; background: rgba(255, 255, 255, 0.2); color: white; border: none; padding: 12px; text-align: center;">
                            </div>

                            <button type="submit" class="btn w-100" style="border-radius: 15px; font-weight: bold; background: linear-gradient(135deg, #00eaff, #0077ff); color: white; padding: 14px; box-shadow: 0 6px 15px rgba(0, 234, 255, 0.4); transform: scale(1.05); transition: all 0.3s ease-in-out;">🌟 Publish Now</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes glow {
        from { text-shadow: 0 0 8px #fff, 0 0 15px #00eaff; }
        to { text-shadow: 0 0 15px #fff, 0 0 25px #0077ff; }
    }
    .btn:hover {
        background: linear-gradient(135deg, #0077ff, #00eaff);
        box-shadow: 0 8px 20px rgba(0, 234, 255, 0.5);
        transform: scale(1.1);
    }
</style>



    <%- include('Footer') %>