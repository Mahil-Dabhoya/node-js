<%- include('Header') %>

<section id="blog" style="padding: 4rem; background: linear-gradient(135deg, #1e3c72, #2a5298); min-height: 100vh; display: flex; flex-direction: column; align-items: center;">
    <% if (blogs.length === 0) { %>
        <h2 class="text-white fw-bold text-center" style="margin-top: 3%; font-size: 2.8rem; text-shadow: 4px 4px 15px rgba(0, 255, 255, 0.7);">
            üöÄ No Blogs Available
        </h2>
    <% } else { %>
        <h2 class="text-white fw-bold text-center" style="margin-bottom: 2rem; font-size: 3rem; text-shadow: 4px 4px 15px rgba(0, 255, 255, 0.7);">
            üåü Featured Blog Posts
        </h2>
        <div class="container">
            <div class="row">
                <% blogs.map((blog) => { %>
                    <div class="col-lg-4 col-md-6 d-flex">
                        <div class="blog-card d-flex flex-column h-100" style="border-radius: 20px; overflow: hidden; background: rgba(255, 255, 255, 0.15); backdrop-filter: blur(15px); box-shadow: 0 10px 30px rgba(0, 255, 255, 0.4); transition: all 0.4s ease-in-out;">
                            <div class="image" style="height: 220px; overflow: hidden; position: relative;">
                                <img src="<%= blog?.image || '/default-image.jpg' %>" alt="Blog image" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.4s ease-in-out;">
                                <div class="overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 255, 255, 0.3); opacity: 0; transition: opacity 0.4s;"></div>
                            </div>
                            <div class="content p-4 d-flex flex-column flex-grow-1">
                                <h3 class="text-white fw-bold" style="font-size: 1.8rem; text-shadow: 2px 2px 8px rgba(0, 255, 255, 0.7);">
                                    <%= blog?.title %>
                                </h3>
                                <p class="author text-light" style="font-style: italic; font-size: 1.1rem;">‚úçÔ∏è <%= blog?.author %></p>
                                <p class="description text-white flex-grow-1" style="font-size: 1rem; line-height: 1.6; opacity: 0.9;">
                                    <%= blog?.description.slice(0, 120) %>...
                                </p>
                                <a href="/readmore?readmoreId=<%= blog?.id %>" class="read-more btn w-100" style="border-radius: 15px; font-weight: bold; background: linear-gradient(135deg, #00ffff, #0077ff); color: white; padding: 12px; box-shadow: 0 5px 15px rgba(0, 255, 255, 0.5); text-align: center; text-decoration: none; transition: all 0.3s ease-in-out;">
                                    üöÄ Read More
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>
</section>

<style>
    .blog-card:hover {
        transform: translateY(-10px) scale(1.03);
        box-shadow: 0 15px 35px rgba(0, 255, 255, 0.6);
    }
    .image:hover img {
        transform: scale(1.1);
    }
    .image:hover .overlay {
        opacity: 1;
    }
    .read-more:hover {
        background: linear-gradient(135deg, #0077ff, #00ffff);
        box-shadow: 0 8px 20px rgba(0, 255, 255, 0.7);
    }
</style>





    <%- include('Footer') %>

      