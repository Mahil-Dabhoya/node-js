<%- include('Header') %>

<section id="blog" style="padding: 3rem; background: linear-gradient(135deg, #0f2027, #203a43, #2c5364); min-height: 100vh; display: flex; flex-direction: column; align-items: center;">
    <% if (blogs.length === 0) { %>
        <h2 align="center" class="text-white fw-bold" style="margin-top: 3%; font-size: 3rem; text-shadow: 5px 5px 20px rgba(255, 0, 150, 0.8);">
            üöÄ No Blogs Available
        </h2>
    <% } else { %>
        <h2 align="center" class="text-white fw-bold" style="margin-bottom: 2rem; font-size: 3rem; text-shadow: 5px 5px 20px rgba(255, 0, 150, 0.8);">
             Trendy Blog Repository
        </h2>
        <div class="container">
            <div class="row">
                <% blogs.map((blog) => { %>
                    <div class="col-md-4 d-flex">
                        <div class="blog-card shadow-lg border-0 d-flex flex-column h-100" style="border-radius: 25px; overflow: hidden; background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(20px); box-shadow: 0 15px 40px rgba(255, 0, 150, 0.4); transition: transform 0.4s, box-shadow 0.4s;">
                            <div class="image" style="height: 230px; overflow: hidden; position: relative;">
                                <img src="<%= blog?.image %>" alt="Blog image" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.4s ease-in-out;">
                                <div class="overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(255, 0, 150, 0.3); opacity: 0; transition: opacity 0.4s;"></div>
                            </div>
                            <div class="content p-4 d-flex flex-column flex-grow-1">
                                <h3 class="title text-white fw-bold" style="font-size: 2rem; text-shadow: 3px 3px 10px rgba(255, 0, 150, 0.8);">
                                    <%= blog?.title %>
                                </h3>
                                <p class="author text-light" style="font-style: italic; font-size: 1.2rem;">‚úçÔ∏è <%= blog?.author %></p>
                                <p class="description text-white flex-grow-1" style="font-size: 1rem; line-height: 1.6;">
                                    <%= blog?.description.slice(0, 120) %>...
                                </p>
                                <a href="/readmore?readmoreId=<%= blog?.id %>" class="read-more btn w-100" style="border-radius: 20px; font-weight: bold; background: linear-gradient(135deg, #ff007a, #d400d4); color: white; padding: 14px; box-shadow: 0 8px 20px rgba(255, 0, 150, 0.5); text-align: center; text-decoration: none;">
                                    üöÄ Read More
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>
</section>

<style>
    .blog-card:hover {
        transform: scale(1.05);
        box-shadow: 0 20px 50px rgba(255, 0, 150, 0.6);
    }
    .image:hover img {
        transform: scale(1.1);
    }
    .image:hover .overlay {
        opacity: 1;
    }
</style>




    <%- include('Footer') %>

      