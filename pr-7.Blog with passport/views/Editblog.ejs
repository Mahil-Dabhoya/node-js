<%- include('Header') %>
<div class="page-wrapper" style="background: linear-gradient(135deg, #ff416c, #ff4b2b); padding: 2rem; min-height: 100vh; margin: 0; display: flex; align-items: center; justify-content: center;">
    <div class="container">
        <h1 class="text-center mb-4 text-white fw-bold" style="font-size: 2rem; text-shadow: 0 0 10px #ffeb3b, 0 0 20px #ffeb3b; animation: glow 1.5s infinite alternate;"> ‚úèÔ∏è Modify Blog Content </h1>
        
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0" style="border-radius: 20px; overflow: hidden; backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.1); box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3); transform: rotate(-3deg);">
                    <div class="box p-4" style="border-radius: 20px;">
                        <form action="/updateBlog" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-white">üìå Funky Title:</label>
                                <input type="text" class="form-control" name="title" value="<%= single.title %>" required style="border-radius: 12px; background: rgba(255, 255, 255, 0.2); color: white; border: none; padding: 10px; text-align: center;">
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-white">üìù Wild Description:</label>
                                <textarea class="form-control" name="description" required style="border-radius: 12px; background: rgba(255, 255, 255, 0.2); color: white; border: none; padding: 10px; text-align: center;"><%= single.description %></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-white">üë§ Rockstar Author:</label>
                                <input type="text" class="form-control" name="author" value="<%= single.author %>" required style="border-radius: 12px; background: rgba(255, 255, 255, 0.2); color: white; border: none; padding: 10px; text-align: center;">
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-white">üì∑ Epic Image:</label>
                                <input type="file" class="form-control" name="image" style="border-radius: 12px; background: rgba(255, 255, 255, 0.2); color: white; border: none; padding: 10px; text-align: center;">
                            </div>

                            <input type="hidden" name="editid" value="<%= single._id %>">
                            <button type="submit" class="btn w-100" style="border-radius: 12px; font-weight: bold; background: linear-gradient(135deg, #ffeb3b, #ff9800); color: white; padding: 12px; box-shadow: 0 4px 10px rgba(255, 235, 59, 0.3); transform: scale(1.1) rotate(3deg);">üöÄ Repost with Changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes glow {
        from { text-shadow: 0 0 5px #fff, 0 0 10px #ffeb3b; }
        to { text-shadow: 0 0 10px #fff, 0 0 20px #ff416c; }
    }
</style>


<%- include('Footer') %>
